# --- Required ---
OPENAI_API_KEY=sk-...
POLYGON_API_KEY=your_polygon_io_api_key

# --- PostgreSQL (defaults match docker-compose) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=stockuser
POSTGRES_PASSWORD=stockpass
POSTGRES_DB=stockassistant

# --- ChromaDB (defaults: host localhost, port 8010) ---
CHROMADB_HOST=localhost
CHROMADB_PORT=8010

